<div class="hero is-primary">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">Welcome to BookBuddy</h1>
            <p class="subtitle">Your Book Discovery Platform</p>
        </div>
    </div>
</div>

<main class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-one-quarter">
                <section class="box">
                    <h2 class="title">Featured Books</h2>
                    <div id="featured-books">
                        {{>save}} {{!-- this is a partials from save.handlebars --}}
                    </div>
                </section>
            </div>
            <div class="column">
                <section class="box">
                    <h2 class="title">Search for Books</h2>
                    <form action="#" method="GET">
                        <div class="field has-addons">
                            <div class="control is-expanded">
                                <input class="input" type="text" name="search" placeholder="Search for books..." id="search-books">
                            </div>
                            <div class="control">
                                <button class="button is-primary" id="clickSearch">Search</button>
                            </div>
                        </div>
                    </form>
                </section>

                <div class="myBooks">
                </div>
            </div>

        </div>
    </div>
</main>
    <script src="" ></script>
<footer class="footer is-primary">
    <div class="content has-text-centered">
        <p>{{footerText}}</p>
    </div>
</footer>
