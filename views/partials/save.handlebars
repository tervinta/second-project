{{#if books}}
<h2>Search Results</h2>
<ul>
  {{#each books}}
  <li>
    <h3 class="title">{{title}}</h3>
    <p>{{author}}</p>
    <img src="{{thumbnail}}" alt="{{title}} cover">
    <form class="save-book-form">
      <input type="hidden" name="bookId" value="{{id}}">
      <button type="submit">Save</button>
    </form>
  </li>
  {{/each}}
</ul>
{{else}}
<p>No results for you</p>
{{/if}}
